<h1>Project Users</h1>

<table>
  <thead>
    <tr>
      <th>Projects</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_users.each do |project_user| %>
      <tr>
        <td><%= project_user.projects %></td>
        <td><%= project_user.users %></td>
        <td><%= link_to 'Show', project_user %></td>
        <td><%= link_to 'Edit', edit_project_user_path(project_user) %></td>
        <td><%= link_to 'Destroy', project_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

