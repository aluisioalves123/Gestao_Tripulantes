<p id="notice"><%= notice %></p>

<h1>Fluxo de caixa</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Valor</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cashiers.each do |cashier| %>
      <tr>
        <td><%= cashier.nome %></td>
        <td><%= cashier.categoria %></td>
        <% if cashier.valor > 0 %>
          <td style="color: green;">
        <% else %>
          <td style="color: red;">
        <% end %>
          <%= cashier.valor %></td>
        <td><%= cashier.data %></td>
        <td><%= link_to 'Show', cashier %></td>
        <td><%= link_to 'Edit', edit_cashier_path(cashier) %></td>
        <td><%= link_to 'Destroy', cashier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Total: <%= @balance %></p>
<%= link_to 'Nova conta', new_cashier_path %>
<p>
  <%= link_to "Home", root_path %></p>
</p>